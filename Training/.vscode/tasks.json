{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    // "_runner": "terminal",
    "tasks": [
        {
            "taskName": "build",
            "suppressTaskName": false,            
            "command": "g++",
            "args": ["-std=c++11", "-o", "${fileDirname}/${fileBasenameNoExtension}.out", "${file}"],
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                }
            },
            "showOutput": "silent"
        },
        {
            "taskName": "run",
            "isTestCommand": true,
            "suppressTaskName": false,            
            "command": "sh",
            "args": ["-c", "g++ -std=c++11 -o ${fileDirname}/${fileBasenameNoExtension}.out ${file} && open ${fileDirname}/${fileBasenameNoExtension}.out"],
            // "args": ["${fileDirname}/${fileBasenameNoExtension}.out"],
            "showOutput": "silent"
        },
        {
            "taskName": "debug",
            "suppressTaskName": false,
            "command": "g++",
            "args": ["-std=c++11", "-g", "${file}" ,"-o", "${fileDirname}/${fileBasenameNoExtension}.out"],
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                }
            }
        },
        {
            "taskName": "clean",
            "suppressTaskName": false,
            "command": "sh",
            "args": ["-c", "rm -rv *.out */*.out *.out.dSYM */*.out.dSYM 2> /dev/null"],
            "showOutput": "silent"
        }
    ]
}